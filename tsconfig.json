{
	"compilerOptions": {
		"baseUrl": "lib",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["esnext"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"newLine": "lf",
		"paths": {
			"@/*": ["./lib/*"]
		}
	},
	"include": ["lib/**/*.ts", "lib/**/*.d.ts"],
	"exclude": ["node_modules", "package.json"]
}
